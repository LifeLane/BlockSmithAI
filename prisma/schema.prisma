// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                String     @id @default(uuid())
  username          String     @unique
  shadowId          String     @unique @default(cuid())
  status            String
  weeklyPoints      Int        @default(0)
  airdropPoints     Int        @default(0)
  wallet_address    String?
  wallet_type       String?
  email             String?    @unique
  phone             String?
  x_handle          String?
  telegram_handle   String?
  youtube_handle    String?
  claimedMissions   String[]
  claimedSpecialOps String[]   @default([])
  positions         Position[]
  userAgents        UserAgent[]
  badges            Badge[]    @relation("UserBadges")
}

model Position {
  id                  String     @id @default(uuid())
  userId              String
  user                User       @relation(fields: [userId], references: [id])
  symbol              String
  signalType          SignalType
  entryPrice          Float
  size                Float
  status              PositionStatus
  openTimestamp       String
  closeTimestamp      String?
  closePrice          Float?
  pnl                 Float?
  stopLoss            Float?
  takeProfit          Float?
  expirationTimestamp String?

  @@index([userId])
}

model UserAgent {
  id                String  @id @default(uuid())
  userId            String
  user              User    @relation(fields: [userId], references: [id])
  agentId           String
  level             Int
  status            String // e.g., IDLE, DEPLOYED
  deploymentEndTime String?

  @@unique([userId, agentId])
  @@index([userId])
}

model Badge {
  id    String @id @default(uuid())
  name  String @unique
  users User[] @relation("UserBadges")
}

enum SignalType {
  BUY
  SELL
  HOLD
}

enum PositionStatus {
  OPEN
  CLOSED
}
